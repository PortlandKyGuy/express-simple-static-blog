{
  "name": "express-simple-static-blog",
  "version": "0.1.0",
  "description": "A simple static html based blog system for Express.js + EJS applications with file-based content and caching",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run lint && npm test",
    "version": "npm run changelog && git add CHANGELOG.md",
    "postversion": "git push && git push --tags && npm publish",
    "changelog": "echo 'Manual changelog update required'",
    "release": "npm version",
    "release:patch": "npm version patch -m 'Release v%s'",
    "release:minor": "npm version minor -m 'Release v%s'",
    "release:major": "npm version major -m 'Release v%s'",
    "release:dry-run": "npm publish --dry-run"
  },
  "keywords": [
    "express",
    "blog",
    "static",
    "html",
    "ejs"
  ],
  "author": "Kyle Aaron",
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyleaaron/express-simple-static-blog.git"
  },
  "bugs": {
    "url": "https://github.com/kyleaaron/express-simple-static-blog/issues"
  },
  "homepage": "https://github.com/kyleaaron/express-simple-static-blog#readme",
  "files": [
    "index.js",
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "directories": {
    "lib": "lib",
    "test": "test",
    "example": "examples"
  },
  "peerDependencies": {
    "express": ">4.0.0",
    "ejs": ">3.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "express": "^4.18.0",
    "ejs": "^3.1.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=21.0.0"
  }
}
